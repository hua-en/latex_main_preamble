\ProvidesPackage{mygreyscaletheorems}

\usepackage{amsthm}
\usepackage{tcolorbox}
\tcbuselibrary{skins, breakable}

% Regular Definitions
\theoremstyle{definition}
\newtheorem{definition}{Definition}
\newtheorem{theorem}{Theorem}
\newtheorem{proposition}{Proposition}
\newtheorem{lemma}{Lemma}
\newtheorem*{corollary}{Corollary}

\newtheorem{example}{Example}
\newtheorem{exercise}{Exercise}
\newtheorem{problem}{Problem}

\newtheorem*{intuition}{Intuition}

\theoremstyle{remark}
\newtheorem*{explanation}{Explanation}

\newtheorem*{remark}{Remark}
\newtheorem*{note}{Note}
\newtheorem*{property}{Property}
\newtheorem*{observation}{Observation}
\newtheorem*{notation}{Notation}

% Wrapping theorems in boxes with TColorBox
\tcolorboxenvironment{definition}{empty, sharp corners, borderline west={4pt}{0pt}{black}}
\tcolorboxenvironment{theorem}{empty, sharp corners, borderline={0pt}{0pt}{black}}
\tcolorboxenvironment{proposition}{empty, sharp corners, borderline={0pt}{0pt}{black}}
\tcolorboxenvironment{lemma}{empty, sharp corners, borderline={0pt}{0pt}{black}}
\tcolorboxenvironment{corollary}{empty, sharp corners, borderline={0pt}{0pt}{black}}

\tcolorboxenvironment{example}{empty, sharp corners, borderline={0pt}{0pt}{black, dashed}}
\tcolorboxenvironment{exercise}{empty, sharp corners, borderline={0pt}{0pt}{black, dashed}}
\tcolorboxenvironment{problem}{empty, sharp corners, borderline={0pt}{0pt}{black, dashed}}

\tcolorboxenvironment{proof}{empty, sharp corners, borderline west={0pt}{0pt}{black}}
\tcolorboxenvironment{explanation}{empty, sharp corners, borderline west={0pt}{0pt}{black}}

