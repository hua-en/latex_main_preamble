% TColorBox Theorems

% Definitions are Green
\newtcbtheorem[] % Starter options
    {definition} % Environment name
    {Definition} % Title
    {thmgreenbox} % Style
    {definition} % Label prefix


% Theorems & related proofs are Red
\newtcbtheorem[]{theorem}{Theorem}{thmredbox}{theorem}
\newtcbtheorem[]{proposition}{Proposition}{thmredbox}{proposition}
\newtcbtheorem[]{lemma}{Lemma}{thmredbox}{lemma}
\newtcbtheorem[]{corollary}{Corollary}{thmredbox}{corollary} % Fix numbering here

\newtcbtheorem[]{prooftemp}{Proof}{thmproofbox}{prooftemp}
\renewenvironment{proof}[2]{\vspace{-10pt}\pushQED{\qed}\begin{prooftemp*}{#1}{#2}}{\null\hfill\popQED\end{prooftemp*}}


% Examples and Exercises are Blue
\newtcbtheorem[]{example}{Example}{thmbluebox}{example}
\newtcbtheorem[]{exercise}{Exercise}{thmbluebox}{exercise}
\newtcbtheorem[]{problem}{Problem}{thmbluebox}{problem}

\newtcbtheorem[]{tempexplanation}{Proof}{thmexplanationbox}{expl}
\newenvironment{explanation}[2]{\vspace{-10pt}\pushQED{\(\circledast\)}\begin{tempexplanation*}{#1}{#2}}{\null\hfill\popQED\end{tempexplanation*}}

% Intuition is Teal
\newtcbtheorem[]{intuition}{Intuition}{thmtealbox}{intuition} % Fix numbering here

% Less important stuff gets lines

% Fix numbering here
\newtcbtheorem[]{remark}{Remark}{thmblueline}{remark}
\newtcbtheorem[]{note}{Note}{thmblueline}{note}
\newtcbtheorem[]{observation}{Observation}{thmblueline}{observation}
\newtcbtheorem[]{notation}{Notation}{thmgreybox}{notation}
\newtcbtheorem[]{property}{Property}{thmgreyline}{property}
